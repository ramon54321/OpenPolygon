{
  "name": "openpolygon",
  "version": "1.0.0",
  "description": "Open source modeling application.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint && npm run build-main && npm run build-renderer-dev && npm run start-debug",
	"qbr": "npm run build-renderer-dev && npm run start-debug",
	"test": "mocha",
	"lint": "eslint ./src/**/*.js",
	"build-main": "babel src/main -d dist",
	"build-renderer-dev": "webpack --color --config webpack.development.config.js",
    "start": "electron dist/index.js",
	"start-debug": "electron dist/index.js debug"
  },
  "author": "Ramon Brand",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "electron": "1.7.11",
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.9.1",
    "jquery": "^3.3.1",
    "mocha": "^5.0.0",
    "webpack": "^3.10.0"
  }
}
