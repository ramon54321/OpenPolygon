{
  "name": "openpolygon",
  "version": "1.0.0",
  "description": "Open source modeling application.",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint && npm run build-main && npm run build-renderer-dev && npm run build-style && npm run start-debug",
    "test": "mocha",
    "lint": "eslint ./src/**/*.js",
    "build-style": "node-sass --output-style compressed ./src/style/index.sass > ./static/index.css",
    "build-main": "babel src/main -d dist",
    "build-renderer-dev": "npm run lint && npm run build-style && webpack --color --config webpack.development.config.js",
    "start": "electron dist/index.js",
    "start-debug": "electron dist/index.js debug"
  },
  "author": "Ramon Brand",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "electron": "1.7.11",
    "electron-reload": "^1.2.2",
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.9.1",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-react": "^7.6.0",
    "jquery": "^3.3.1",
    "mobx": "^3.4.1",
    "mobx-react": "^4.3.5",
    "mocha": "^5.0.0",
    "mousetrap": "^1.6.1",
    "node-sass": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack": "^3.10.0"
  }
}
